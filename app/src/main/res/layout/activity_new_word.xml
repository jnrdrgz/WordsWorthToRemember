<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewWordActivity"
    android:background="@color/colorBackground">

    <EditText
        android:id="@+id/box_definition"
        android:layout_width="342dp"
        android:layout_height="95dp"
        android:layout_marginTop="4dp"
        android:background="@color/colorBackgroundSecondary"
        android:ems="10"
        android:inputType="text"
        android:text="Definition"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.362"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/box_word" />

    <EditText
        android:id="@+id/box_word"
        android:layout_width="341dp"
        android:layout_height="40dp"
        android:layout_marginTop="52dp"
        android:background="@color/colorBackgroundSecondary"
        android:ems="10"
        android:inputType="text"
        android:text="Word"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.371"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/lang_switch"
        android:layout_width="41dp"
        android:layout_height="38dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:checked="false"
        android:showText="true"
        android:splitTrack="false"
        android:textOff="ES"
        android:textOn="EN"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/box_definition"
        tools:checked="false" />

    <Button
        android:id="@+id/button_clear"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/work_sans"
        android:text="Clear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.362"
        app:layout_constraintStart_toEndOf="@+id/button_auto"
        app:layout_constraintTop_toBottomOf="@+id/box_definition" />

    <Button
        android:id="@+id/button_auto"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/work_sans"
        android:text="Auto"
        app:layout_constraintStart_toEndOf="@+id/lang_switch"
        app:layout_constraintTop_toBottomOf="@+id/box_definition" />

    <Button
        android:background="@drawable/button_shape"
        android:fontFamily="@font/work_sans"
        android:id="@+id/button_add"
        android:layout_width="224dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:text="Add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.77"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_auto" />
</android.support.constraint.ConstraintLayout>