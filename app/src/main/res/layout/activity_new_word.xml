<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewWordActivity">

    <EditText
        android:id="@+id/box_definition"
        android:layout_width="361dp"
        android:layout_height="73dp"
        android:layout_marginStart="20dp"
        android:ems="10"
        android:inputType="text"
        android:text="Definition"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/box_word" />

    <EditText
        android:id="@+id/box_word"
        android:layout_width="353dp"
        android:layout_height="43dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:inputType="text"
        android:text="Word"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.344"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/lang_switch"
        android:layout_width="79dp"
        android:layout_height="36dp"
        android:layout_marginStart="32dp"
        android:checked="false"
        android:showText="true"
        android:splitTrack="false"
        android:textOff="ES"
        android:textOn="EN"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/box_definition"
        tools:checked="false" />

    <Button
        android:id="@+id/button_clear"
        android:layout_width="111dp"
        android:layout_height="43dp"
        android:layout_marginStart="28dp"
        android:text="Clear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/button_auto"
        app:layout_constraintTop_toBottomOf="@+id/box_definition" />

    <Button
        android:id="@+id/button_auto"
        android:layout_width="94dp"
        android:layout_height="43dp"
        android:layout_marginStart="40dp"
        android:text="Auto"
        app:layout_constraintStart_toEndOf="@+id/lang_switch"
        app:layout_constraintTop_toBottomOf="@+id/box_definition" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="230dp"
        android:layout_height="56dp"
        android:layout_marginEnd="28dp"
        android:text="Add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_auto" />
</android.support.constraint.ConstraintLayout>